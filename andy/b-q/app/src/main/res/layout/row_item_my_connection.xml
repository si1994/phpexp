<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRowMyConnection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@color/colorLightBlueFill"
        android:visibility="visible"
        android:id="@+id/ivMyConnection"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivMyConnection"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            style="@style/font_sf_pro_text_regular"
            android:id="@+id/tvConnectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            tools:text="John Smith"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sdp" />


        <TextView
            style="@style/font_sf_pro_text_regular"
            android:id="@+id/tvCityState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            tools:text="Los Angeles, CA"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/chat_last_message"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


</RelativeLayout>