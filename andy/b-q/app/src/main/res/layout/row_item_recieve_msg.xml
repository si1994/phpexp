<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/llDateTimeReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDateReceive"
            style="@style/font_sf_pro_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            tools:text="Today" />

        <TextView
            android:id="@+id/tvTimeReceive"
            style="@style/font_sf_pro_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            tools:text="7:21 PM" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llDateTimeReceive">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivChatRecvImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_friend_request" />


        <ImageView
            android:id="@+id/imgGifReceive"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_toEndOf="@+id/ivChatRecvImg"
            android:src="@color/spindle"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_toEndOf="@+id/ivChatRecvImg"
            android:layout_marginStart="@dimen/_2sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlReceivedMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_recv">

                <br.com.instachat.emojilibrary.model.layout.EmojiTextView
                    android:id="@+id/tvReceivedMsg"
                    style="@style/font_sf_pro_text_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp"
                    app:emojiSize="@dimen/_20sdp"
                    tools:text="rdddddddddddddfvfdfdf" />

            </RelativeLayout>
            <View
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_20sdp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>