<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- <android.support.v7.widget.AppCompatTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/tvNoUser"
         android:visibility="gone"
         android:text="@string/no_user_found"
         android:textSize="@dimen/_18sdp"
         android:textStyle="bold"
         style="@style/fontBold"
         android:layout_centerInParent="true"/>-->


    <com.quirktastic.view.SwipViewpager
        android:id="@+id/customViewPager"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />


    <RelativeLayout
        android:id="@+id/llNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <include
            layout="@layout/no_data_found_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>



    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivSendRequest"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:src="@drawable/icon_friend_request"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivNextRequest"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:src="@drawable/icon_pass"
        android:visibility="visible" />

</RelativeLayout>