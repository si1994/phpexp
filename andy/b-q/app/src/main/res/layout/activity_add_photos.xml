<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBackNext">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus10sdp"
                    android:src="@drawable/illustrations" />

                <TextView
                    android:id="@+id/add_your_ph"
                    style="@style/font_sfuitext_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center_horizontal"
                    android:text="@string/add_photos_"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/tvPleaseEnter"
                    style="@style/font_sfuitext_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:text="@string/give_us_you"
                    android:textColor="@color/text_please_enter_five_verify_screen"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:id="@+id/llSelectPhoto"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/rectangle_dash_stroke"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/edtOtpOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera" />


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAddPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:reverseLayout="true"
                    app:stackFromEnd="true" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llBackNext"
        android:layout_width="@dimen/_86sdp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottomBtnNextAddInterests"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSaveForLater"
            style="@style/font_sfuitext_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/save_for_later"
            android:textColor="@color/save_for_later"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llBottomBtnNextAddInterests"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btn_rect_gradiant"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNextAddInterests"
            style="@style/font_sfuitext_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/next_add_in"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>


</RelativeLayout>