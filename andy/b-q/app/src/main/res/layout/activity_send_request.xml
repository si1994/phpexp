<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivOtherUserImage"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center"
            android:src="@drawable/img_placeholder" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvIntroduceYourSelf"
            style="@style/font_sf_pro_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sdp"
            tools:text="Introduce yourself to Kiera" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_blue"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtIntroduce"
                style="@style/font_sfuitext_regular"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColorHint="@color/colorLightGrey"
                android:textSize="@dimen/_12sdp"
                tools:hint="Hi, Kiera! I really Like" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvIntroCount"
            style="@style/font_sfuitext_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="right"
            android:text="@string/bio_text_count"
            android:textColor="@color/stroke"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/tvFriendRequestSend"
            style="@style/font_sfuitext_semibold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/btn_rect_gradiant"
            android:gravity="center"
            android:text="@string/send_friend_request"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/llCancelRequest"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCancelRequest"
                style="@style/font_sfuitext_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
