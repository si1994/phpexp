<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
    </style>
    <style name="customTabStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/sf_pro_text_light</item>


    </style>
    <style name="fontRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="fontBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="fontSemiBold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="fontMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="fontExtraBold">
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="font_arial_black">
        <item name="android:fontFamily">@font/arial_black</item>
    </style>

    <style name="font_arial_bold">
        <item name="android:fontFamily">@font/arial_bold</item>
    </style>

    <style name="font_arial_regular">
        <item name="android:fontFamily">@font/arial_regular</item>
    </style>


    <style name="font_sf_pro_text_bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="font_sf_pro_text_light">
        <item name="android:fontFamily">@font/sf_pro_text_light</item>
    </style>

    <style name="font_sf_pro_text_lightItalic">
        <item name="android:fontFamily">@font/sf_pro_text_light_italic</item>
    </style>

    <style name="font_sf_pro_text_medium">
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="font_sf_pro_text_regular">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="font_sf_pro_text_semibold">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
    </style>

    <style name="font_sf_ui_display_regular">
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

    <style name="font_sfuitext_light">
        <item name="android:fontFamily">@font/sfuitext_light</item>
    </style>

    <style name="font_sfuitext_regular">
        <item name="android:fontFamily">@font/sfuitext_regular</item>
    </style>

    <style name="font_sfuitext_semibold">
        <item name="android:fontFamily">@font/sfuitext_semibold</item>
    </style>

    <style name="font_roboto_regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="font_nunito_sans_regular">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>


    <style name="Theme.Dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
